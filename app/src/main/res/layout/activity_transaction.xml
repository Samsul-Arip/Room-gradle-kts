<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingStart="27dp"
    android:paddingEnd="27dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TransactionActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pilih_menu_transaksi"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="27dp"
        android:text="@string/container"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_komoditas"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:text="@string/komoditas"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_transaction"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:text="@string/transaksi"
        />

</LinearLayout>